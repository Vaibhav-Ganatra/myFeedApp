<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPassword_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Recovery"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="We will send you a password reset link to the E-mail you provide below."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/displayText"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayText"
        android:layout_margin="20dp"
        android:hint="Enter E-mail"
        android:id="@+id/resetEmail_forgotPasswordScreen_xml"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetEmail_forgotPasswordScreen_xml"
        android:layout_centerHorizontal="true"
        android:text="Send Reset Password E-mail"
        android:id="@+id/sendEmailButton_forgotPasswordScreen_xml"
        />

</RelativeLayout>