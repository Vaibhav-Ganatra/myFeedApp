<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/login_icon"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_loginScreen_xml"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/username_loginScreen_xml"
        android:drawableLeft="@drawable/username1"
        android:drawablePadding="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/image_loginScreen_xml"
        android:hint="E-mail"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:layout_marginRight="25dp"
        android:id="@+id/password_loginScreen_xml"
        android:drawableLeft="@drawable/lock2"
        android:layout_below="@+id/username_loginScreen_xml"
        android:hint="Password"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPassword_loginScreen_xml"
        android:layout_below="@+id/password_loginScreen_xml"
        android:layout_alignParentEnd="true"
        android:text="Forgot Password?"
        android:textColor="#0000FF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"/>
    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/loginButton_loginScreen_xml"
        android:layout_below="@+id/forgotPassword_loginScreen_xml"
        android:textColor="#FFFFFF"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_bg"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/loginButton_loginScreen_xml"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:id="@+id/progressBar_loginScreen_xml"/>
    <TextView
        android:id="@+id/dontHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar_loginScreen_xml"
        android:layout_marginLeft="60dp"
        android:text="Don\'t have an Account?  "
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/signUp_loginScreen_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar_loginScreen_xml"
        android:layout_toEndOf="@+id/dontHaveAnAccount"
        android:text="Sign Up!"
        android:layout_toRightOf="@+id/dontHaveAnAccount"
        android:textColor="#0000FF"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="OR"
        android:id="@+id/or"
        android:layout_below="@+id/signUp_loginScreen_xml"
        />
    <TableRow
        android:id="@+id/hr"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="#004"
        android:layout_toLeftOf="@+id/or"
        android:layout_below="@+id/signUp_loginScreen_xml"
        android:layout_marginRight="5dp"
        android:layout_marginTop="18dp"
        />
    <TableRow
        android:id="@+id/hr2"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_toRightOf="@+id/or"
        android:layout_below="@+id/signUp_loginScreen_xml"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        />

    <Button
        android:id="@+id/signInWithGoogle_loginScreen_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_bg"
        android:drawableStart="@drawable/ic_google_logo"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="Sign in with Google"
        android:textColor="#FFFFFF" />


</RelativeLayout>