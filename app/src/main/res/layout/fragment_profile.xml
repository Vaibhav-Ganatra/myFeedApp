<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="YOUR PROFILE"
        android:layout_marginTop="80dp"
        android:textColor="#000000"
        android:textSize="24sp"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profilePicture_profileFragment_xml"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        app:roundAsCircle="true"
        />
    <ProgressBar
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:id="@+id/progress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePicture_profileFragment_xml"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"

        android:hint="Enter Name"
        android:id="@+id/name_profileFragment_xml"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_profileFragment_xml"
        android:layout_marginTop="20dp"
        android:hint="Enter E-mail"
        android:layout_marginHorizontal="10dp"
        android:enabled="false"
        android:textColor="#000000"
        android:id="@+id/email_profileFragment_xml"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_profileFragment_xml"
        android:layout_marginTop="20dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:id="@+id/phone_profileFragment_xml"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/phone_profileFragment_xml"
        android:layout_alignParentEnd="true"
        android:text="submit"
        android:visibility="invisible"
        android:id="@+id/submit_profileFragment_xml"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_profileFragment_xml"
        android:text="verify"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:id="@+id/verify_profileFragment_xml"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_profileFragment_xml"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="save"
        android:layout_margin="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logOut_profileFragment_xml"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="LogOut"
        android:layout_margin="10dp"
        />
</RelativeLayout>